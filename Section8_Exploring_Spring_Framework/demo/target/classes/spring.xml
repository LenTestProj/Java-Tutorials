    <bean id="alien" class="com.telecom.Alien" autowire="byType">    
        <property name="age" value="24" />
        <property name="com" ref="com1">
        <!-- inner bean only used by alien -->
            <bean id="com1" class="com.telecom.Laptop" primary="true">
            </bean>
        </property>
        <!-- this will prefer com1 rather than autowire which will look for com -->
    </bean>

    <!-- Primary is used for auto wiring to decide which bean to select if byType is selected -->
